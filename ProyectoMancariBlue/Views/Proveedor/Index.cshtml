@using Newtonsoft.Json;
@model IEnumerable<ProyectoMancariBlue.Models.Obj.DTO.ProveedorDTO>
@{
    ViewData["Title"] = "Proveedor";
}
@functions {
    string NombreCompleto(string n, string a)
    {
        return n + " " + a;

    }

}
<div class="app-title">
    <div>
        <h1><i class="fa fa-th-list" style="margin-right: 10px;"></i>Administración de Proveedores</h1>
        <p>Proveedores</p>
        <br>
        <a onclick="OpenModal('mdlAddProveedor')" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i>Crear Proveedor</a>
    </div>
    <ul class="app-breadcrumb breadcrumb side">
        <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
        <li class="breadcrumb-item">Proveedores</li>
    </ul>
</div>

@if (Model != null && Model.Any())
{
    <div class="row" style="flex-direction:column">
        <div class="col-md-14">
            <div class="tile">
                <div class="tile-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered" id="tproveedor">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Identificacion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nombre)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Telefono)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Correo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CategoriaProveedor.Descripcion)
                                    </th>
                                    <th>
                                        Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Identificacion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Telefono)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Correo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CategoriaProveedor.Descripcion)
                                        </td>
                                        <td>
                                            <a class="btn btn-primary" onclick="OpenModalModifyProveedor(this,'mdlModifyProveedor',0)" data-proveedor='@JsonConvert.SerializeObject(item)'>Editar</a>
                                            <a class="btn btn-info" onclick="OpenModalModifyProveedor(this,'mdlModifyProveedor',1)" data-proveedor='@JsonConvert.SerializeObject(item)'>Detalle</a>
                                            @if (item.Estado)
                                            {
                                                <a class="btn btn-danger cambiar-estado-btn" onclick="EnableAndDisableProveedor(this)" data-id="@item.Id">Desactivar</a>

                                            }
                                            else
                                            {
                                                <a class="btn btn-success cambiar-estado-btn" onclick="EnableAndDisableProveedor(this)" data-id="@item.Id">Activar</a>
                                            }

                                        </td>
                                    </tr>

                                }



                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{

    <div>No se ha encontrado registros para mostrar</div>

}

