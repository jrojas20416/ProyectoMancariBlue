                $("#txtProveedorTelefonoModify").val(proveedor.Telefono);
                $("#txtProveedorCorreoModify").val(proveedor.Correo);
                $("#hdfEstadoModify").val(proveedor.Estado);
                $("#hdfIdModify").val(proveedor.Id);
