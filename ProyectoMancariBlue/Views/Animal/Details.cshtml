@model ProyectoMancariBlue.Models.Obj.Animal

@{
    ViewData["Title"] = "VerAnimal";
}

<div class="app-title">
    <div>
        <h1><i class="fa fa-th-list" style="margin-right: 10px;"></i>Ver Animales</h1>
        <p>Animales</p>

    </div>
    <ul class="app-breadcrumb breadcrumb side">
        <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
        <li class="breadcrumb-item">Animales</li>
    </ul>
</div>
<div class="col-md-12">
<div class="tile">
    <h3 class="tile-title">Detalle de Animal</h3>
    <div class="tile-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Id" class="control-label">Código Animal</label>
                        <input asp-for="Id" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="Padre" class="control-label">Código Padre</label>
                        <input asp-for="Padre" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="Madre" class="control-label">Código Madre</label>
                        <input asp-for="Madre" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="Raza" class="control-label">Raza</label>
                        <input asp-for="Raza" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Genero" class="control-label">Género</label>
                        <input asp-for="Genero" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="PartosRegistrados" class="control-label">Partos Registrados</label>
                        <input asp-for="PartosRegistrados" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="PesoKG" class="control-label">Peso (KG)</label>
                        <input asp-for="PesoKG" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaNacimiento" class="control-label">Fecha Nacimiento</label>
                        <input asp-for="FechaNacimiento" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="Estado" class="control-label">Activo</label>
                        <input asp-for="Estado" type="checkbox" disabled />
                    </div>

                </div>
            </div>

                <hr>
                <h3 class="tile-title">Historico Vacunas</h3>
                <div class="row" style="flex-direction:column">
                    <div class="col-md-12">
                        <div class="tile">
                            <div class="tile-body">
                                <div class="table-responsive">
                                    <table class="table table-hover table-bordered" id="tvacunas">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Fecha Aplicación
                                                </th>
                                                <th>
                                                    Nombre Vacuna
                                                </th>
                                                <th>
                                                    Categoría Vacuna
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    15/01/2024
                                                </td>
                                                <td>
                                                    Vacuna 1
                                                </td>
                                                <td>
                                                    Desparacitante
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    30/01/2024
                                                </td>
                                                <td>
                                                    Vacuna 2
                                                </td>
                                                <td>
                                                    Desparacitante
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <div class="form-group">
                <a class="btn btn-secondary" href="javascript:history.back();"><i class="fa fa-fw fa-lg fa-times-circle"></i>Regresar</a>
            </div>
    </div>
</div>
</div>