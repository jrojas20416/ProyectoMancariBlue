@{
    ViewData["Title"] = "CrearAnimal";
}

<div class="app-title">
    <div>
        <h1><i class="fa fa-th-list" style="margin-right: 10px;"></i>Crear Animales</h1>
        <p>Empleados</p>

    </div>
    <ul class="app-breadcrumb breadcrumb side">
        <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
        <li class="breadcrumb-item">Animales</li>
    </ul>
</div>
<div class="col-md-12">
    <div class="tile">
        <h3 class="tile-title">Crear Animal</h3>
        <div class="tile-body">
            <form asp-action="Index" asp-controller="Animal" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Código</label>
                            <input class="form-control" />
                            <span class="text-danger">Campo requerido</span>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Padre</label>
                            <select class="form-control">
                                <option value="">Seleccionar...</option>
                                <option value="0001">0001</option>
                                <option value="0002">0002</option>
                                <option value="0003">0004</option>
                                <option value="Externo">Externo</option>
                            </select>
                            <span class="text-danger">Campo requerido</span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Madre</label>
                            <select class="form-control">
                                <option value="">Seleccionar...</option>
                                <option value="0001">0001</option>
                                <option value="0002">0002</option>
                                <option value="0003">0004</option>
                                <option value="Externo">Externo</option>
                            </select>
                            <span class="text-danger">Campo requerido</span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Raza</label>
                            <select class="form-control">
                                <option value="">Seleccionar...</option>
                                <option value="Raza 1">Raza 1</option>
                                <option value="Raza 2">Raza 2</option>
                                <option value="Raza 3">Raza 3</option>
                                <option value="No Definida">No Definida</option>
                            </select>
                            <span class="text-danger">Campo requerido</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label d-block">Género</label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="genero" id="genero_hembra" value="hembra">
                                <label class="form-check-label" for="genero_hembra">Hembra</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="genero" id="genero_macho" value="macho">
                                <label class="form-check-label" for="genero_macho">Macho</label>
                            </div>
                            <span class="text-danger d-block">Campo requerido</span>
                        </div>

                        <div class="form-group" id="partosRegistradosDiv">
                            <label class="control-label">Partos Registrados</label>
                            <input class="form-control" id="partosRegistradosInput" disabled>
                            <span class="text-danger">Campo requerido</span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Peso (KG)</label>
                            <input class="form-control" />
                            <span class="text-danger">Campo requerido</span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Fecha de Nacimiento</label>
                            <input type="date" class="form-control" />
                            <span class="text-danger">Campo requerido</span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit"><i class="fa fa-fw fa-lg fa-check-circle"></i>Crear</button>&nbsp;&nbsp;&nbsp;<a class="btn btn-secondary" href="javascript:history.back();"><i class="fa fa-fw fa-lg fa-times-circle"></i>Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {

    <script>
        // Función para mostrar u ocultar la previsualización de la imagen
        function actualizarPrevisualizacion() {
            var fileInput = document.getElementById('Imagen');
            var previsualizacionContainer = document.getElementById('previsualizacionContainer');
            var imgPrevisualizacion = document.getElementById('imagenPrevisualizacion');

            if (fileInput.files && fileInput.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    imgPrevisualizacion.setAttribute('src', e.target.result);
                }
                reader.readAsDataURL(fileInput.files[0]);
                previsualizacionContainer.style.display = 'block';
            } else {
                imgPrevisualizacion.setAttribute('src', '#');
                previsualizacionContainer.style.display = 'none';
            }
        }

        // Asignar los eventos change y load al input de tipo file
        var imagenInput = document.getElementById('Imagen');
        imagenInput.addEventListener('change', actualizarPrevisualizacion);
        imagenInput.addEventListener('load', actualizarPrevisualizacion);
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var generoHembra= document.getElementById('genero_hembra');
            var generoMacho = document.getElementById('genero_macho');
            var partosRegistradosInput = document.getElementById('partosRegistradosInput');

            function actualizarCampoPartos() {
                if (generoHembra.checked) {
                    partosRegistradosInput.disabled = false;
                } else {
                    partosRegistradosInput.disabled = true;
                }
            }

            generoHembra.addEventListener('change', actualizarCampoPartos);
            generoMacho.addEventListener('change', actualizarCampoPartos);
        });
    </script>
}