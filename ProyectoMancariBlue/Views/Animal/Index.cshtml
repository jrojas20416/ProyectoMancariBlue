@section Scripts {
    <script src="~/js/plugins/jquery.datatables.min.js"></script>
    <script src="~/js/plugins/datatables.bootstrap.min.js"></script>
    <script src="~/js/animaljs/animaljs.js"></script>
    <script type="text/javascript">$('#tanimals').DataTable();</script>
    <script>
        var animalList = @Html.Raw(Json.Serialize(Model));
        var AnimalEmContainer = document.getElementById('AnimalEmContainer');
        var AnimalModifyEmContainer = document.getElementById('AnimalModifyEmContainer');
        var AnimalInfoEmContainer = document.getElementById('AnimalInfoEmContainer');

        $('input[name="animalGenderInfo"]').attr("disabled", true);
        $(document).ready(function () {

            var ChagendDate = new Date;
            $('#dtDate').attr('max', ChagendDate.toISOString().split('T')[0]);
            $('#dtDate').val(ChagendDate.toISOString().split('T')[0].substring(0, 10));


            $('.cambiar-estado-btn').click(function (e) {
                e.preventDefault();

                var id = $(this).data('id');


                Swal.fire({
                    title: 'Confirmación',
                    text: '¿Estás seguro de que cambiar el estado?',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'Sí',
                    cancelButtonText: 'No'
                }).then((result) => {
                    if (result.isConfirmed) {

                        $.ajax({
                            url: '@Url.Action("Delete", "Animal")',
                            type: 'POST',
                            data: { id: id },
                            success: function (response) {

                                Swal.fire('Éxito', 'Se ha cambiado el estado correctamente.', 'success').then(function () {

                                    location.reload();
                                });
                            },
                            error: function (xhr, status, error) {

                                Swal.fire('Error', 'Error al cambiar el estado.', 'error');
                                console.error('Error:', error);
                            }
                        });
                    }
                });
            });


            $('#tanimales').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "responsive": true,
                "buttons": [
                    'copy', 'excel', 'pdf', 'print'
                ],
                "lengthMenu": [[5, 10, 25, 50, 100], [5, 10, 25, 50, "Todo"]],
                "language": {
                    "lengthMenu": "Mostrar _MENU_ registros por página",
                    "zeroRecords": "No se encontraron registros",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ registros",
                    "infoEmpty": "No hay registros disponibles",
                    "infoFiltered": "(filtrados de _MAX_ registros en total)",
                    "search": "Buscar:",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });






            AnimalEmContainer.style.display = "none";

            InitializerEventDropDownList('ddlAddAnimalModal', 'AddAnimalList');
            InitializerEventDropDownList('ddlAddAnimalMothreModal', 'AddAnimalMotherlList');
            InitializerEventDropDownList('ddlAddAnimalRazaModal', 'AddAnimalRazalList');

            InitializerEventDropDownList('ddlModifyAnimalModal', 'ModifyAnimalList');
            InitializerEventDropDownList('ddlModifyAnimalMothreModal', 'ModifyAnimalMotherlList');
            InitializerEventDropDownList('ddlModifyAnimalRazaModal', 'ModifyAnimalRazalList');

            InitializerEventDropDownList('ddlInfoAnimalModal', 'InfoAnimalList');
            InitializerEventDropDownList('ddlInfoAnimalMothreModal', 'InfoAnimalMotherlList');
            InitializerEventDropDownList('ddlInfoAnimalRazaModal', 'InfoAnimalRazalList');
        });
        function InitializerEventDropDownList(DropDownInput, dataList) {
            var typingTimer;
            var doneTypingInterval = 1000;

            document.getElementById(DropDownInput).addEventListener("input", function () {
                clearTimeout(typingTimer);

                typingTimer = setTimeout(function () {
                    var inputValue = document.getElementById(DropDownInput).value.toLowerCase();
                    var inputObject = document.getElementById(DropDownInput);
                    var options = document.getElementById(dataList).options;

                    for (var i = 0; i < options.length; i++) {
                        var option = options[i];
                        var text = option.textContent.toLowerCase();

                        if (text.indexOf(removeAccents(inputValue)) !== -1) {
                            option.style.display = "block";
                        } else {
                            option.style.display = "none";
                        }
                    }
                    var selectedOption = null;
                    for (var i = 0; i < options.length; i++) {
                        if (options[i].value.toLowerCase() === inputObject.value.toLowerCase()) {
                            selectedOption = options[i];

                            break;
                        }
                    }
                    if (selectedOption) {
                        inputObject.value = selectedOption.textContent;

                    }
                    if (GetDropDownValueSelected(DropDownInput, dataList) === null) {
                        inputObject.value = '';
                        inputObject.placeholder = "No se encontró el registro digitado";


                        typingTimer = setTimeout(function () {
                            inputObject.placeholder = "Seleccione una opción...";
                        }, 700)
                    }
                    else {


                        document.getElementById(DropDownInput).value = GetDropDownTextContentSelected(DropDownInput, dataList);
                        options[0].selected = true;
                    }
                }, doneTypingInterval);


            });
        }

        document.querySelectorAll('input[name="animalGender"]').forEach((elem) => {
            elem.addEventListener("change", function (event) {
                var selectedGender = event.target.value;

                if (selectedGender === "M") {
                    AnimalEmContainer.style.display = "none";
                } else if (selectedGender === "H") {
                    AnimalEmContainer.style.display = "block";
                }



            });
        });

        document.querySelectorAll('input[name="animalGenderModify"]').forEach((elem) => {
            elem.addEventListener("change", function (event) {
                var selectedGender = event.target.value;

                if (selectedGender === "M") {
                    AnimalModifyEmContainer.style.display = "none";
                } else if (selectedGender === "H") {
                    AnimalModifyEmContainer.style.display = "block";
                }



            });
        });

        document.querySelectorAll('input[name="animalGenderModify"]').forEach((elem) => {
            elem.addEventListener("change", function (event) {
                var selectedGender = event.target.value;

                if (selectedGender === "M") {
                    AnimalInfoEmContainer.style.display = "none";
                } else if (selectedGender === "H") {
                    AnimalInfoEmContainer.style.display = "block";
                }



            });
        });


        function OpenModalModifyAnimal(button, modal) {
            var AnimalEmContainerr = document.getElementById('AnimalEmContainer');
            var animalJson = button.getAttribute("data-animal");
            var animal = JSON.parse(animalJson);
            console.log(animal);
            $("#txtModifyCodigo").val(animal.Codigo);
            $("#ddlModifyAnimalRazaModal").val(animal.Raza);
            ActivateInputEvent('ddlModifyAnimalRazaModal');
            $("#ddlModifyAnimalModal").val(animal.Padre);
            ActivateInputEvent('ddlModifyAnimalModal');
            $("#ddlModifyAnimalMothreModal").val(animal.Madre);
            ActivateInputEvent('ddlModifyAnimalMothreModal');
            if (animal.Genero === 'H') {
                $('#genderModifyFemale').prop('checked', true);
                AnimalModifyEmContainer.style.display = "block";
            }
            else {
                $('#genderModifyMale').prop('checked', true);
                AnimalModifyEmContainer.style.display = "none";
            }

            $("#dtDateModify").val(animal.FechaNacimiento.substring(0, 10));
            $("#txtanimalModifyBirths").val(animal.PartosRegistrados);
            $("#txtanimalModifyHeigth").val(animal.PesoKG);
            $("#hdfIdModify").val(animal.Id);
            $("#hdfEstadoModify").val(animal.Estado);
            $("#txtModifyCodigo").attr("readonly", true);

            OpenModal(modal);
        }
        function OpenModalInfoAnimal(button, modal) {
            var AnimalEmContainerr = document.getElementById('AnimalEmContainer');
            var animalJson = button.getAttribute("data-animal");
            var animal = JSON.parse(animalJson);
            console.log(animal);
            $("#txtInfoCodigo").val(animal.Codigo);
            $("#ddlInfoAnimalRazaModal").val(animal.Raza);
            ActivateInputEvent('ddlInfoAnimalRazaModal');
            $("#ddlInfoAnimalModal").val(animal.Padre);
            ActivateInputEvent('ddlInfoAnimalModal');
            $("#ddlInfoAnimalMothreModal").val(animal.Madre);
            ActivateInputEvent('ddlInfoAnimalMothreModal');
            if (animal.Genero === 'H') {
                $('#genderInfoFemale').prop('checked', true);
                AnimalInfoEmContainer.style.display = "block";
            }
            else {
                $('#genderInfoMale').prop('checked', true);
                AnimalInfoEmContainer.style.display = "none";
            }

            $("#dtDateInfo").val(animal.FechaNacimiento.substring(0, 10));
            $("#txtanimalInfoBirths").val(animal.PartosRegistrados);
            $("#txtanimalInfoHeigth").val(animal.PesoKG);
            $("#hdfIdInfo").val(animal.Id);
            $("#hdfEstadoInfo").val(animal.Estado);
            $("#txtInfoCodigo").attr("readonly", true);


            $.ajax({
                url: '/Animal/ObtenerVacunas',
                data: { idAnimal: animal.Id },
                type: 'GET',
                success: function (data) {
                    $('#informacionAnimalContainer').html(data);
                },
                error: function (error) {
                    console.log('Error al obtener la información del animal:', error);
                }
            });



            OpenModal(modal);
        }

        function SeachAnimalByCode(code) {
            console.log(animalList);
            return animalList.find(animal => animal.codigo === code);
        }

    </script>

}
