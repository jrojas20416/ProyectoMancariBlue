                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Genero)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PartosRegistrados)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PesoKG)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.Raza)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FechaNacimiento)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Estado)
                                    </th>
                                    <th>
                                        Días ultima vacuna
                                    </th>
                                    <th>
                                        Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Codigo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MadreAnimal.Codigo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PadreAnimal.Codigo)
                                        </td>
                                        @if (item.Genero.Equals("H"))
                                        {
                                            <td>
                                                Hembra
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PartosRegistrados)
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                Macho
                                            </td>
                                            <td>
                                                N/A
                                            </td>
                                        }



                                        <td>
                                            @Html.DisplayFor(modelItem => item.PesoKG) KG.
                                        </td>

                                        <td>
                                            @item.Raza.GetDisplayName()
                                        </td>
                                        <td>
                                            @item.FechaNacimiento.ToShortDateString()
                                        </td>
                                        <td>
                                            @if (item.Estado)
                                            {

                                                <span class="badge badge-success">Activo</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Inactivo</span>

                                            }
                                        </td>

                                        @if (item.FechaUltimaVacuna != null)

                                        {
                                            if (CalcularDias(item.FechaUltimaVacuna.Value) < 31)
                                            {

                                                <td class=" badge-success">
                                                    @CalcularDias(item.FechaUltimaVacuna.Value) Días
                                                </td>
                                            }
                                            else

                                            {
                                                if (CalcularMeses(item.FechaUltimaVacuna.Value) >= 3)
                                                {

                                                    <td class=" badge-danger">
                                                        @CalcularMeses(item.FechaUltimaVacuna.Value) Meses
                                                    </td>
                                                }
                                                else
                                                {

                                                    <td class=" badge-success">
                                                        @CalcularMeses(item.FechaUltimaVacuna.Value) Meses
                                                    </td>
                                                }
                                            }

                                           
                                        }
                                        else
                                        {
                                            <td>
                                                No presenta vacuna
                                            </td>
                                        }


                                        <td>
                                            <a class="btn btn-primary" onclick="OpenModalModifyAnimal(this,'mdlModifyAnimal')" data-animal='@JsonConvert.SerializeObject(item)' style="color:white;">Editar</a>
                                            <a class="btn btn-info" onclick="OpenModalInfoAnimal(this,'mdlInfoAnimal')" data-animal='@JsonConvert.SerializeObject(item)' style="color:white;">Ver</a>
                                            @if (item.Estado)
                                            {
                                                <a class="btn btn-danger cambiar-estado-btn" href="#" data-id="@item.Id">Desactivar</a>

                                            }
                                            else
                                            {
                                                <a class="btn btn-success cambiar-estado-btn" href="#" data-id="@item.Id">Activar</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div>
        <h3>Lo sentimos no tenemos datos por mostrar</h3>
