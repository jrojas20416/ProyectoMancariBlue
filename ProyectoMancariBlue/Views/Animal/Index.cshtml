@{
    ViewData["Title"] = "Index";
    string layoutName = Context.Request.Cookies["Layout"] ?? "_Layout";
    Layout = layoutName ?? "_Layout";

    int CalcularDias(DateTime date)
    {
        DateTime today = DateTime.Today;
        TimeSpan difference = today - date;
        return difference.Days;
    }
     int CalcularMeses(DateTime startDate)
    {
        DateTime today = DateTime.Today;
        int yearsDifference = today.Year - startDate.Year;
        int monthsDifference = today.Month - startDate.Month;

        int totalMonthsDifference = (yearsDifference * 12) + monthsDifference;

        int dayDifference = today.Day - startDate.Day;
        if (dayDifference < 0)
        {
            totalMonthsDifference--;
        }

        int daysInMonth = DateTime.DaysInMonth(startDate.Year, startDate.Month);
        double fractionOfMonth = (double)(today.Day - startDate.Day) / daysInMonth;

        if (fractionOfMonth >= 0.5)
        {
            totalMonthsDifference++;
        }

        return totalMonthsDifference;
    }
}

