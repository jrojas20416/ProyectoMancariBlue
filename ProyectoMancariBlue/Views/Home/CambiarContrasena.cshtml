@{
    ViewData["Title"] = "CambiarContrasena";
    Layout = "LoginLayout";
}


<div class="changePass-box">
    <form class="login-form" asp-action="CambiarContrasenaS" method="post">
        <h4 class="login-head"><i class="fa fa-lg fa-fw fa-user"></i>Cambiar contraseña</h4>

        <div class="form-group">
            <label class="control-label">Contraseña Actual</label>
            <input class="form-control" type="password" placeholder="*********" autofocus>
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Nueva Contraseña</label>
            <input class="form-control" type="password" placeholder="*********" autofocus>
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Confirme Nueva Contraseña</label>
            <input class="form-control" type="password" placeholder="*********" autofocus>
            <span class="text-danger"></span>
        </div>
        <div class="form-group btn-container">
            <button type="submit" class="btn btn-primary btn-block" href=""><i class="fa fa-sign-in fa-lg fa-fw"></i>Cambiar</button>
        </div>
    </form>
</div>