<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mancari Blue</title>
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <!-- Font-icon css-->
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    
</head>
<body class="app sidebar-mini">
    <header class="app-header">
        <a class="app-header__logo" asp-controller="Home" asp-action="Index">MANCARI BLUE</a>
        <!-- <img src="~/img/logo.png" class="logo-image" width="30px" height="auto">  -->

        <!-- Sidebar toggle button--><a class="app-sidebar__toggle" href="#" data-toggle="sidebar" aria-label="Hide Sidebar"></a>

        <ul class="app-nav">
            <!-- User Menu-->
            <li class="dropdown">
                <a class="app-nav__item" href="#" data-toggle="dropdown" aria-label="Open Profile Menu"><i class="fa fa-user fa-lg"></i></a>
                <ul class="dropdown-menu settings-menu dropdown-menu-right">
                    <li><a class="dropdown-item" asp-controller="Home" asp-action="CambiarContrasena"><i class="fa fa-lock fa-lg"></i> Cambiar Contraseña</a></li>
                    <li><a class="dropdown-item" asp-controller="Home" asp-action="CerrarSesion"><i class="fa fa-sign-out fa-lg"></i>Cerrar Sesion</a></li>
                </ul>
            </li>
        </ul>
    </header>
    <!-- Sidebar menu-->
    <div class="app-sidebar__overlay" data-toggle="sidebar"></div>
    <aside class="app-sidebar">
        <div class="app-sidebar__user">
            <div>
                <p class="app-sidebar__user-name">
                    @{
                        var nombreCompleto = "Josue Rojas Chaves";
                    }
                    @nombreCompleto
                </p>
                <p class="app-sidebar__user-designation">Administrador</p>
            </div>
        </div>
        <ul class="app-menu">
            <li><a class="app-menu__item" asp-action="Index" asp-controller="Home"><i class="app-menu__icon fa fa-tachometer"></i><span class="app-menu__label">Dashboard</span></a></li>
            <li class="nav-item dropdown" id="dropdownMenu">
                <a class="app-menu__item dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="app-menu__icon fa fa-users"></i>
                    <span class="app-menu__label">Módulo Empleados</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" asp-action="Index" asp-controller="Empleado">Empleados</a>
                    <a class="dropdown-item" asp-action="Index" asp-controller="Vacacion">Vacaciones</a>
                    <a class="dropdown-item" asp-action="IndexPrestacion" asp-controller="Empleado">Prestaciones</a>
                </div>
            </li>
            <li class="nav-item dropdown" id="dropdownMenu">
                <a class="app-menu__item dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="app-menu__icon fa fa-tags"></i>
                    <span class="app-menu__label">Módulo Animales</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" asp-action="Index" asp-controller="Animal">Animales</a>
                    <a class="dropdown-item" asp-action="Index" asp-controller="Vacuna">Vacunas</a>
                    <a class="dropdown-item" asp-action="IndexG" asp-controller="Animal">Registro Generacional</a>
                </div>
            </li>
            <li class="nav-item dropdown" id="dropdownMenu">
                <a class="app-menu__item dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="app-menu__icon fa fa-truck"></i>
                    <span class="app-menu__label">Módulo Inventario</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" asp-action="Index" asp-controller="Inventario">Inventario</a>
                </div>
            </li>
            <li class="nav-item dropdown" id="dropdownMenu">
                <a class="app-menu__item dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="app-menu__icon fa fa-credit-card"></i>
                    <span class="app-menu__label">Módulo Proveedores</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" asp-action="Index" asp-controller="Proveedor">Proveedores</a>
                </div>
            </li>
            <li class="nav-item dropdown" id="dropdownMenu">
                <a class="app-menu__item dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="app-menu__icon fa fa-university"></i>
                    <span class="app-menu__label">Módulo Transacciones</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" asp-action="Index" asp-controller="Transaccion">Transacciones</a>
                </div>
            </li>
            <li class="nav-item dropdown" id="dropdownMenu">
                <a class="app-menu__item dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="app-menu__icon fa fa-th-list"></i>
                    <span class="app-menu__label">Módulo Reportes</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" asp-action="Index" asp-controller="Reporte">Reporetes</a>
                </div>
            </li>
            <li class="nav-item dropdown" id="dropdownMenu">
                <a class="app-menu__item dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="app-menu__icon fa fa-user"></i>
                    <span class="app-menu__label">Módulo Usuarios</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" asp-action="IndexA" asp-controller="Empleado">Usuarios</a>
                </div>
            </li>

        </ul>
    </aside>
    <main role="main" class="app-content">
        @RenderBody()
    </main>
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/plugins/chart.js"></script>
    <script src="~/js/plugins/pace.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script type="text/javascript" src="~/js/plugins/chart.js"></script>
    <script src="~/js/main.js"></script>
    @if (!string.IsNullOrEmpty(TempData["AlertMessage"] as string))
    {
        <script>
            Swal.fire({
                icon: '@TempData["AlertType"]',
                title: '@TempData["AlertMessage"]',
                showConfirmButton: false,
                timer: 3000 // Duración de la alerta en milisegundos (2 segundos en este ejemplo)
            }).then(function () {
                // Limpiar TempData después de mostrar la alerta
                '@TempData.Remove("AlertType")';
                '@TempData.Remove("AlertMessage")';
            });
        </script>
    }
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("modals", required: false)
</body>
</html>