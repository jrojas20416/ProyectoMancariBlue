@{
    ViewData["Title"] = "CrearVacuna";
}

<div class="app-title">
    <div>
        <h1><i class="fa fa-th-list"></i>Crear Vacuna</h1>
        <p>Vacunas</p>

    </div>
    <ul class="app-breadcrumb breadcrumb side">
        <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
        <li class="breadcrumb-item">Vacuna</li>
    </ul>
</div>
<div class="col-md-12">
    <div class="tile">
        <h3 class="tile-title">Agregar Vacuna</h3>
        <div class="tile-body">
            <form asp-action="Index" asp-controller="Vacuna" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Código Animal</label>
                            <select class="form-control" id="codigoSelect" onchange="rellenarCampos()">
                                <option value="">Seleccionar...</option>
                                <option value="0001">0001</option>
                                <option value="0002">0002</option>
                                <option value="0003">0003</option>
                            </select>
                            <span class="text-danger">Campo requerido</span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Género</label>
                            <input class="form-control" id="generoInput" />
                            <span class="text-danger">Campo requerido</span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Peso</label>
                            <input class="form-control" id="pesoInput" />
                            <span class="text-danger">Campo requerido</span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Fecha Nacimiento</label>
                            <input class="form-control" id="fechaInput" />
                            <span class="text-danger">Campo requerido</span>
                        </div>
                    </div>
                        <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Vacuna</label>
                            <select class="form-control" id="vacunaSelect" onchange="rellenarCamposV()">
                                <option value="">Seleccionar...</option>
                                <option value="Vacuna 1">Vacuna 1</option>
                                <option value="Vacuna 2">Vacuna 2</option>
                                <option value="Vacuna 3">Vacuna 3</option>
                            </select>
                            <span class="text-danger">Campo requerido</span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Categoría Vacuna</label>
                            <input class="form-control" id="categoriaInput" />
                            <span class="text-danger">Campo requerido</span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Fecha Aplicación</label>
                            <input class="form-control" />
                            <span class="text-danger">Campo requerido</span>
                        </div>
                        </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit"><i class="fa fa-fw fa-lg fa-check-circle"></i>Agregar</button>&nbsp;&nbsp;&nbsp;<a class="btn btn-secondary" href="javascript:history.back();"><i class="fa fa-fw fa-lg fa-times-circle"></i>Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {

    <script>
        // Función para mostrar u ocultar la previsualización de la imagen
        function actualizarPrevisualizacion() {
            var fileInput = document.getElementById('Imagen');
            var previsualizacionContainer = document.getElementById('previsualizacionContainer');
            var imgPrevisualizacion = document.getElementById('imagenPrevisualizacion');

            if (fileInput.files && fileInput.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    imgPrevisualizacion.setAttribute('src', e.target.result);
                }
                reader.readAsDataURL(fileInput.files[0]);
                previsualizacionContainer.style.display = 'block';
            } else {
                imgPrevisualizacion.setAttribute('src', '#');
                previsualizacionContainer.style.display = 'none';
            }
        }

        // Asignar los eventos change y load al input de tipo file
        var imagenInput = document.getElementById('Imagen');
        imagenInput.addEventListener('change', actualizarPrevisualizacion);
        imagenInput.addEventListener('load', actualizarPrevisualizacion);
    </script>

    <script>
        function rellenarCampos() {
            var select = document.getElementById("codigoSelect");
            var selectedOption = select.options[select.selectedIndex].value;
            var genero = "";
            var peso = "";
            var fecha = "";


            // Aquí puedes agregar lógica para asignar valores a las variables
            // dependiendo de la opción seleccionada.

            switch (selectedOption) {
                case "0001":
                    genero = "Hembra";
                    peso = "86";
                    fecha = "01/01/2024";
                    break;
                case "1-0740-0756":
                    genero = "Hembra";
                    peso = "86";
                    fecha = "01/01/2024";
                    break
                case "0002":
                    genero = "Macho";
                    peso = "72";
                    fecha = "04/01/2024";
                    break;
                case "0003":
                    genero = "Hembra";
                    peso = "70";
                    fecha = "15/01/2024";
                    break;
                default:
                    break;
            }

            document.getElementById("generoInput").value = genero;
            document.getElementById("pesoInput").value = peso;
            document.getElementById("fechaInput").value = fecha;
        }
    </script>

    <script>
        function rellenarCamposV() {
            var select = document.getElementById("vacunaSelect");
            var selectedOption = select.options[select.selectedIndex].value;
            var categoria = "";
 

            // Aquí puedes agregar lógica para asignar valores a las variables
            // dependiendo de la opción seleccionada.

            switch (selectedOption) {
                case "Vacuna 1":
                    categoria = "Desparacitante";
                    break;
                case "Vacuna 2":
                    categoria = "Analgésico";
                    break
                case "Vacuna 3":
                  categoria = "Suplemento"
                    break;
                default:
                    break;
            }

            document.getElementById("categoriaInput").value = categoria;
        }
    </script>

}